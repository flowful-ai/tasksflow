{
  "name": "@flowtask/database",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schema": {
      "bun": "./src/schema.ts",
      "types": "./dist/schema.d.ts",
      "import": "./dist/schema.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup",
    "watch": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@flowtask/shared": "workspace:*",
    "drizzle-orm": "^0.38.2",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "drizzle-kit": "^0.30.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  }
}
